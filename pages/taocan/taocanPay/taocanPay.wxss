.c_listCon {
  position: relative;
  margin-top: 10rpx;
}

.hotList {
  display: flex;
  width: 100%;
  background: white;
  padding: 19rpx 13rpx;
  margin-bottom: 15rpx;
}

.c_listCon .hotList .pro_img {
  width: 210rpx;
  height: 210rpx;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  margin-left: 20rpx;
  width: 70%;
  margin-right: 20rpx;
}

.store {
  display: flex;
}

.pro_info .store .proTitle {
  width: 70%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 20rpx;
}

.pro_info .proPrice {
  width: 22%;
  text-align: right;
}

.tip {
  margin-top: 20rpx;
}

.fc-gray99 {
  color: #999;
}

.intro {
  display: flex;
  height: 75rpx;
  width: 100%;
  line-height: 70rpx;
  padding: 0 12rpx 0 12rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #b5b5b5;
}

.intro view {
  width: 50%;
}

.closeTime {
  text-align: right;
  margin-right: 10rpx;
}

.colorR {
  color: #f85c45;
}

.order {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: white;
  background: #f85c45;
}

.stepper {
  width: 80px !important;
  height: 26px;
  margin-bottom: 30rpx;
  margin-top: 11rpx;
  position: absolute;
  right: -22rpx;
  display: flex;
}

.stepper text {
  display: inline-block;
  height: 30rpx;
  width: 30rpx;
  border-radius: 100%;
  border: 1px solid #999;
  line-height: 27rpx;
  text-align: center;
  margin-top: 10rpx;
  color: #999;
}

.stepper input {
  width: 20px;
  height: 26px;
  text-align: center;
  font-size: 12px;
  min-height: 0;
}

.stepper .normal {
  /* color: black; */
}

.stepper .disabled {
  color: #ccc;
}

.susIcon {
  width: 41rpx;
  height: 26rpx;
  vertical-align: middle;
}

.body-view {
  text-align: right;
}

.switchIcon {
  transform: scale(0.8) !important;
}

.taocan-pay-out {
  width: 100vw;
  overflow: hidden;
}