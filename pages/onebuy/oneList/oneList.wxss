.out-side {
  overflow: hidden;
  background: linear-gradient(to bottom, #ff9500 0%, #fe7800 100%) !important;
}

.bg {
  background: url('https://img.duishangbao.cn/upload/oneBuy/bg.png?v=1105') no-repeat 0 0 / 750rpx 1299rpx;
}

.poster {
  width: 709rpx;
  height: 949rpx;
  padding-top: 88rpx;
}

.txtCenter {
  text-align: center;
}

.rule {
  width: 709rpx;
  height: 230rpx;
  margin: 55rpx auto;
}

.rule image {
  height: 100%;
  width: 100%;
}

.rule view {
  color: #ba4600;
  display: block;
  /* text-align: center; */
  margin-bottom: 15rpx;
}

.rule view text {
  display: inline-block;
  height: 37rpx;
  width: 37rpx;
  background: #e14915;
  color: #fff;
  border-radius: 100%;
  font-size: 22rpx;
  text-align: center;
  line-height: 37rpx;
  margin-right: 10rpx;
  position: relative;
  top:-1rpx;
}

.ruleContainer {
  position: relative;
  top: 88rpx;
  width: 370rpx;
  margin: auto;
}

.listContainer {
  position: relative;
  width: 94vw;
  margin: 50rpx auto;
}

.product {
  position: relative;
}

.list {
  display: flex;
  background: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.proImg {
  width: 356rpx;
  height: 334rpx;
}

.proImg image {
  height: 100%;
  width: 100%;
}

.proName {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.proInfo {
  width: 45%;
  margin-left: 23rpx;
}

.proName {
  margin: 40rpx 0 24rpx 0;
  letter-spacing: 2rpx;
}

.price {
  color: #c10202;
  font-size: 34rpx;
  margin-left: -5rpx;
}

.privousPrice {
  font-size: 20rpx;
  color: #666;
  text-decoration: line-through;
  padding-left: 5rpx;
  box-sizing: border-box;
}

.stock {
  color: #fe7600;
  font-size: 24rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.need {
  color: #666;
}

.need text {
  color: #fe7600;
}

.assistance {
  display: inline-block;
  position: absolute;
  left: 380rpx;
  top: 224rpx;
  z-index: 1;
}

.recevie {
  display: inline-block;
  width: 165rpx;
  height: 55rpx;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 55rpx;
  overflow: hidden;
  position: absolute;
  right: 20rpx;
  top: 228rpx;
  z-index: 2;
}

.bgRed {
  background: #d60505;
}

.bgYellow {
  background: #fe7700;
}

.bgGray {
  background: #b3b3b3;
}

.saleOut {
  position: absolute;
  top: 0;
  z-index: 999;
  background: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  width: 94vw;
  height: 334rpx;
  opacity: 0.5;
}

.saleOut image {
  width: 169rpx;
  height: 142rpx;
  margin: 100rpx 0 0 80rpx;
  box-sizing: border-box;
}

.specBox {
  display: none;
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1011;
}

.specBox.this-show {
  display: block;
}

.specBox .gray-back {
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.7;
  position: absolute;
  left: 0;
  top: 0;
}

.spec-bar {
  display: block;
  width: 100vw;
  padding-top: 25rpx;
  background: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  overflow: hidden;
}

.spec-bar .group {
  overflow: hidden;
}

.spec-bar .group .type-name {
  display: inline-block;
  width: 90rpx;
  padding-left: 20rpx;
  float: left;
}

.spec-bar .group .view-box {
  width: 600rpx;
  overflow: hidden;
  float: left;
}

.spec-bar .group .view-box text {
  display: inline-block;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 22rpx;
  font-size: 22rpx;
  color: #333;
  border-radius: 4rpx;
  border: 1px solid #666;
  float: left;
  margin: 0 20rpx 20rpx 0;
}

.spec-bar .group .view-box text.t-active {
  color: #fe7200;
  border: 1rpx solid #fe7200;
}

.spec-bar .group .yi-xuan {
  display: block;
  width: 710rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-top: 1rpx solid #dcdcdc;
  font-size: 22rpx;
  color: #333;
  text-align: left;
  margin: 0 auto;
}

.spec-bar .group.goods-num {
  padding-bottom: 15rpx;
}

.spec-bar .foot-btn {
  width: 100vw;
  height: 98rpx;
  border-top: 1rpx solid #dcdcdc;
}

.spec-bar .foot-btn text {
  width: 40vw;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 34rpx;
  color: #666;
  text-align: center;
  float: right;
}

.spec-bar .foot-btn .ok {
  width: 60vw;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 40rpx;
  color: #fff;
  background-color: #e60012;
  text-align: center;
  float: right;
  border-radius: 0;
}

.spec-bar .foot-btn .ok:active {
  opacity: 0.8;
}

.tc-num-bar {
  width: 750rpx;
  height: 816rpx;
  background: url('https://img.duishangbao.cn/upload/oneBuy/tc-numts.png?v=1105') no-repeat 0 0 / 750rpx 816rpx;
  position: absolute;
  left: 0;
  top: calc(50vh - 430rpx);
  z-index: 3;
}

.tc-num-bar .tit {
  display: block;
  text-align: center;
  font-size: 45rpx;
  color: #333;
  padding: 450rpx 0 0;
}

.tc-num-bar .tit-ing {
  display: block;
  text-align: center;
  font-size: 36rpx;
  color: #fe7a00;
  padding: 55rpx 0 12rpx;
}

.tc-num-bar .c {
  display: block;
  width: 492rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: url('https://img.duishangbao.cn/upload/oneBuy/btn-isee.png?v=1105') no-repeat 0 0 / 492rpx 70rpx;
  font-size: 30rpx;
  color: #fff;
  margin: 0 auto;
}

.tc-num-bar .c:active,
.list:active,
.recevie:active {
  opacity: .8;
}

.share-bar {
  width: 550rpx;
  overflow: hidden;
  position: absolute;
  left: 100rpx;
  top: calc(50vh - 240rpx);
}

.share-bar .close {
  display: block;
  height: 64rpx;
}

.share-bar .close image {
  width: 44rpx;
  height: 44rpx;
  float: right;
}

.share-bar .tit {
  display: block;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  background-color: #fff;
  color: #333;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.share-bar .ts-txt {
  background-color: #fff;
  color: #333;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  padding: 60rpx 0 40rpx;
}

.share-bar .ts-txt view {
  display: block;
  text-align: center;
  color: #333;
  line-height: 60rpx;
}

.share-bar .ts-txt view text {
  color: #b60000;
}

.share-bar .share {
  height: 126rpx;
  line-height: 126rpx;
  text-align: center;
  background-color: #ff8e00;
  color: #fff;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.end-time {
  display: inline-block;
  width: 200rpx;
  color: #fe7600;
  border-radius: 10rpx;
  text-align: right;
  overflow: hidden;
  position: absolute;
  right: 28rpx;
  top: 190rpx;
  z-index: 2;

}

.return {
  width: 200rpx;
  position: fixed;
  right: -20rpx;
  bottom: 3vh;
  background: #f7e9da;
  border-radius: 30rpx;
  box-sizing: border-box;
  text-align: center;
  color: #fe7d00;
  height: 58rpx;
  line-height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.return text:first-child {
  padding-right: 5rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
