.header {
  display: flex;
  height: 82rpx;
  background-color: #38454e;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.header view {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  flex: 1;
}

.header image {
  width: 33rpx;
  height: 33rpx;
}

.content>image {
  width: 100%;
}

.content {
  /* padding: 20rpx; */
  border-bottom: 1px solid #d6d6d6;
}

.text-box {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
}

.text-box .red {
  display: inline-block;
  padding-right: 3px;
  color: #f01212;
}

/* .text-box text:last-child {
  margin-left: 15rpx;
} */

.content view > image {
  width: 30rpx;
  height: 26rpx;
}

.footer {
  padding: 40rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 10px solid #f5f5f5;
}

.footer .group {
  padding: 10rpx 0;
  overflow: hidden;
}

.footer .group text.type-name {
  display: inline-block;
  width: 80rpx;
  padding-top: 15rpx;
  float: left;
}

.footer .group .view-box {
  width:calc(100vw - 120rpx);
  float: left;
  overflow: hidden;
}

.footer .group.goods-num .btn-box {
  margin-top: 6rpx;
  float: left;
}

.t-box {
  display: inline-block;
  padding: 10rpx 25rpx;
  background-color: #e6e6e6;
  margin-right: 10rpx;
}

.color .t-box {
  margin-top: 10rpx;
}

.text-box {
  display: flex;
  flex-wrap: wrap;
}

.t-active {
  color: #fff;
  background-color: #f75d45;
}

.btn-box {
  width: 145rpx;
  height: 45rpx;
  display: flex;
  border: 1px solid #b8b8b8;
}

.btn-box text {
  display: inline-block;
  width: 33%;
  height: 100%;
  text-align: center;
  line-height: 200%;
  border-left: 1px solid #d6d6d6;
  border-right: 1px solid #d6d6d6;
}

.btn-box button {
  width: 50%;
  height: 100%;
  padding: 0;
  border-radius: 0;
  margin: 0;
  font-size: 24rpx;
  line-height: 200%;
}

.btn-box button::after, .footer-btn-box button::after {
  border: 0;
  border-radius: 0;
}

.goods-interduce text {
  display: inline-block;
  width: 100%;
  text-align: center;
  height: 65rpx;
  line-height: 65rpx;
}

.footer-btn-box {
  /* margin-top: 15rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}

.footer-btn-box view {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.footer-btn-box view text {
  width: 100%;
  display: inline-block;
  text-align: center;
}

.footer-btn-box button {
  line-height: 100rpx;
}

.footer-btn-box button, .footer-btn-box view {
  width: 50%;
  height: 100%;
}

.footer-btn-box button, .footer-btn-box-b button {
  padding: 0;
  margin: 0;
  border: 0;
  border-radius: 0;
}

.footer-btn-box image, .footer-btn-box-b image {
  width: 54rpx;
  height: 52rpx;
}

.footer-btn-box-b {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


.footer-btn-box-b view, .footer-btn-box-b button {
  display: inline-flex;
  width: 25%;
  height: 100%;
  justify-content: center;
  align-items: center;
  line-height: normal;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.goods-interduce {
   margin-bottom: 75rpx;
}

.goods-interduce image {
  width: 100%;
  height: auto;
}

.slide-image {
  display: inline;
}

.store {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  border-bottom: 1px solid #d6d6d6;
}

.store image {
  margin-left: 10rpx;
  height: 74rpx;
  width: 196rpx;
  vertical-align: middle;
}

.goodsTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.header-detail {
  display: block;
}

.header-detail .header-text {
  display: block;
  width: calc(100% - 30px);
  float: left;
  padding: 0;
}

.header-detail .header-text text {
  display: block;
  line-height: 82rpx;
  width: 50%;
  text-align: center;
  float: left;
}

.iconfont-share-text {
  width:30px;
  height:30px;
  overflow:hidden;
  display:inline-block;
  float:left;
  margin-top:8px;
}

.iconfont-share-btn {
  width: 40px;
  height: 40px;
  position: absolute;
  right: 10px;
  top: 0;
  opacity: 0;
}

.dis-line {
  display: block;
  padding-top: 10rpx;
}

#footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-top: 1px solid #e5e5e5;
  z-index: 3;
  text-align: center;
}
#footer .jian {
  height: 50rpx;
  line-height: 50rpx;
  background: #fbe3e3;
  color: #ff000c;
}
#footer .gou {
  height: 90rpx;
  line-height: 90rpx;
  background: #ff000c;
  color: #fff;
}
#footer .gou:active {
  opacity: .8;
}
.foot-btn {
  width: 100vw;
  height: 98rpx;
  border-top: 1rpx solid #dcdcdc;
}
.foot-btn text {
  width: 40vw;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 34rpx;
  color: #666;
  text-align: center;
  float: right;
}
.foot-btn .ok {
  width: 60vw;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 38rpx;
  color: #fff;
  background-color: #e60012;
  text-align: center;
  float: right;
  border-radius: 0;
  border: 0;
}
.foot-btn .ling {
  background-color: #fb7221;
}
.foot-btn .gray {
  background-color: #ccc;
}
.foot-btn .ok:active {
  opacity: .8;
}
.specBox {
  display: none;
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 101;
}
.specBox.this-show {
  display: block;
}
.specBox .gray-back {
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: .7;
  position: absolute;
  left: 0;
  top: 0;
}
.share-bar {
  width: 550rpx;
  overflow: hidden;
  position: absolute;
  left: 100rpx;
  top: calc(50vh - 240rpx);
}
.share-bar .close {
  display: block;
  height: 64rpx;
}
.share-bar .close image {
  width: 44rpx;
  height: 44rpx;
  float: right;
}
.share-bar .tit {
  display: block;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  background-color: #fff;
  color: #333;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.share-bar .ts-txt {
  background-color: #fff;
  color: #333;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  padding: 60rpx 0 40rpx;
}

.share-bar .ts-txt view {
  display: block;
  text-align: center;
  color: #333;
  line-height: 60rpx;
}
.share-bar .ts-txt view text {
  color: #b60000;
}
.share-bar .share {
  height: 126rpx;
  line-height: 126rpx;
  text-align: center;
  background-color: #ff8e00;
  color: #fff;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
button::after {
  border: none;
}