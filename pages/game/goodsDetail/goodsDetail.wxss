.header {
  display: flex;
  height: 82rpx;
  background-color: #38454e;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.header view {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  flex: 1;
}

.header image {
  width: 33rpx;
  height: 33rpx;
}

.content>image {
  width: 100%;
}

.content {
  /* padding: 20rpx; */
  border-bottom: 1px solid #d6d6d6;
}

.text-box {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
}

.text-box .red {
  display: inline-block;
  padding-right: 3px;
  color: #f01212;
}

/* .text-box text:last-child {
  margin-left: 15rpx;
} */

.content view > image {
  width: 30rpx;
  height: 26rpx;
}

.footer {
  padding: 40rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 10px solid #f5f5f5;
}

.footer .group {
  padding: 10rpx 0;
  overflow: hidden;
}

.footer .group text.type-name {
  display: inline-block;
  width: 80rpx;
  padding-top: 15rpx;
  float: left;
}

.footer .group .view-box {
  width:calc(100vw - 120rpx);
  float: left;
  overflow: hidden;
}

.footer .group.goods-num .btn-box {
  margin-top: 6rpx;
  float: left;
}

.t-box {
  display: inline-block;
  padding: 10rpx 25rpx;
  background-color: #e6e6e6;
  margin-right: 10rpx;
}

.color .t-box {
  margin-top: 10rpx;
}

.text-box {
  display: flex;
  flex-wrap: wrap;
}

.t-active {
  color: #fff;
  background-color: #f75d45;
}

.btn-box {
  width: 145rpx;
  height: 45rpx;
  display: flex;
  border: 1px solid #b8b8b8;
}

.btn-box text {
  display: inline-block;
  width: 33%;
  height: 100%;
  text-align: center;
  line-height: 200%;
  border-left: 1px solid #d6d6d6;
  border-right: 1px solid #d6d6d6;
}

.btn-box button {
  width: 50%;
  height: 100%;
  padding: 0;
  border-radius: 0;
  margin: 0;
  font-size: 24rpx;
  line-height: 200%;
}

.btn-box button::after, .footer-btn-box button::after {
  border: 0;
  border-radius: 0;
}

.goods-interduce text {
  display: inline-block;
  width: 100%;
  text-align: center;
  height: 65rpx;
  line-height: 65rpx;
}

.footer-btn-box {
  /* margin-top: 15rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}

.footer-btn-box view {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.footer-btn-box view text {
  width: 100%;
  display: inline-block;
  text-align: center;
}

.footer-btn-box button {
  line-height: 100rpx;
}

.footer-btn-box button, .footer-btn-box view {
  width: 50%;
  height: 100%;
}

.footer-btn-box button, .footer-btn-box-b button {
  padding: 0;
  margin: 0;
  border: 0;
  border-radius: 0;
}

.footer-btn-box image, .footer-btn-box-b image {
  width: 54rpx;
  height: 52rpx;
}

.footer-btn-box-b {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


.footer-btn-box-b view, .footer-btn-box-b button {
  display: inline-flex;
  width: 25%;
  height: 100%;
  justify-content: center;
  align-items: center;
  line-height: normal;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

#footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-top: 1px solid #e5e5e5;
  z-index: 3;
}

.goods-interduce {
   margin-bottom: 75rpx;
}

.goods-interduce image {
  width: 100%;
  height: auto;
}

.slide-image {
  display: inline;
}

.store {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  border-bottom: 1px solid #d6d6d6;
}

.store image {
  margin-left: 10rpx;
  height: 74rpx;
  width: 196rpx;
  vertical-align: middle;
}

.goodsTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.header-detail {
  display: block;
}

.header-detail .header-text {
  display: block;
  width: calc(100% - 30px);
  float: left;
  padding: 0;
}

.header-detail .header-text text {
  display: block;
  line-height: 82rpx;
  width: 50%;
  text-align: center;
  float: left;
}

.iconfont-share-text {
  width:30px;
  height:30px;
  overflow:hidden;
  display:inline-block;
  float:left;
  margin-top:8px;
}

.iconfont-share-btn {
  width: 40px;
  height: 40px;
  position: absolute;
  right: 10px;
  top: 0;
  opacity: 0;
}

.dis-line {
  display: block;
  padding-top: 10rpx;
}

.footer-btn-box .game-pay-btn {
  display: block;
  width: 375rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  color: #fff;
}
.footer-btn-box .game-pay-btn.gray {
  background-color: #ccc;
}
.footer-btn-box .game-pay-btn.go-pay {
  background-color: #f75d45;
}
.footer-btn-box .game-pay-btn.go-yao {
  background: #e71018 url(https://img.duishangbao.cn/upload/game/icon_shaizi.png) no-repeat 50rpx 6rpx / 70rpx 100rpx;
  width: 295rpx;
  padding-left: 80rpx;
}
.footer-btn-box .game-pay-btn.go-pay:active,
.footer-btn-box .game-pay-btn.go-yao:active {
  opacity: .8;
}
.footer-btn-box .game-pay-btn.gray {
  color: #999;
}