.tips {
  background: #f3d49d;
  height: 50rpx;
  text-align: center;
  color: #dd7732;
  line-height: 50rpx;
  margin-bottom: 20rpx;
}

.c_listCon {
  position: relative;
}

.hotList {
  display: flex;
  background: white;
  padding: 19rpx 13rpx;
  margin-bottom: 15rpx;
}

.c_listCon .hotList .pro_img {
  width: 210rpx;
  height: 210rpx;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  margin-left: 10rpx;
  width: 70%;
}

.choiceStore {
  margin-left: 25rpx;
  width: 66%;
}

.choiceStore .storeName {
  display: flex;
  margin-bottom: 14rpx;
}

.choiceStore .storeName text:first-child {
  width: 95%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 20rpx;
}

.choiceStore .btn {
  display: inline-block;
  height: 40rpx;
  width: 100rpx;
  padding: 0 !important;
  color: #f85c45;
  line-height: 40rpx;
  background-color: #fff;
  border: 1px solid #f85c45;
  box-sizing: content-box !important;
  margin-bottom: 10rpx;
}

.choiceStore .btn:last-child {
  margin-left: 10rpx;
}

.fc-gray9 {
  color: #999;
}

.proFooter {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.mar {
  margin-top: 36rpx;
}

.refundMoney {
  margin-top: 12rpx;
}

.hotTitle {
  height: 65rpx;
  width: 100%;
  line-height: 65rpx;
  padding-left: 12rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #bfbfbf;
}

.refundMoney .content {
  margin: 24rpx 0 12rpx 12rpx;
}

.refundMoney view:last-child {
  padding-bottom: 20rpx;
}

.themeColor {
  color: #f85c45;
}

.footer {
  position: fixed;
  bottom: 0;
  color: white;
  background: #f85c45;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  width: 100%;
}

.checkbox {
  height: 73rpx;
  border-bottom: 1px solid #bfbfbf;
  padding-left: 12rpx;
  box-sizing: border-box;
}

.mar_bottom {
  margin: 12rpx 0 150rpx 0;
}

.checkbox text{
  width:91%;
  display: inline-block;
}