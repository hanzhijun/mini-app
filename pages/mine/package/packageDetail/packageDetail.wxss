.c_listCon {
  position: relative;
  margin-top: 10rpx;
}

.hotList {
  display: flex;
  /* height: 175rpx; */
  width: 100%;
  background: white;
  padding: 19rpx 13rpx;
  margin-bottom: 15rpx;
}

.c_listCon .hotList .pro_img {
  width: 210rpx;
  height: 210rpx;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  margin-left: 20rpx;
  width: 70%;
  overflow: hidden;
}

.c_listCon .pro_info .proText, .c_listCon .pro_info .proTitle {
  display: inline-block;
  margin: 20rpx 20rpx 20rpx 0;
}

.c_listCon .pro_info .proTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.c_listCon .pro_info .proText:first-child {
  margin-top: 0;
}

.colorC {
  color: #ccc;
}

.sliverInfo text {
  display: inline-block;
}

.sliverInfo text:last-child {
  text-align: right;
}

.packageBg {
  position: relative;
  text-align: center;
}

.packageBg image {
  width: 719rpx;
  height: 228rpx;
}

.ticket {
  width: 70%;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -35%;
}

.ticket text {
  display: inline-block;
  color: white;
  vertical-align: middle;
}

.line {
  width: 20%;
  border-top: 1px solid white;
}

 .ticket text:nth-child(2) {
  margin: 0 20rpx;
} 

.ticketNum {
  display: flex;
  margin-top: 10rpx;
}

.ticketNum view {
  width: 50%;
  text-align: center;
}

.ticketNum view:first-child {
  margin-left: -35rpx;
}

.orderStatus {
  height: 74rpx;
  width: 256rpx;
  border: 1px solid #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 74rpx;
  color: white;
  margin-top: 20rpx;
}


/*商家信息  */

.bus_info {
  width: 100%;
  margin-top: 15rpx;
}

.locationCon {
  display: flex;
  padding: 12rpx;
}

.location {
  width: 80%;
  border-right: 1px solid #aaa;
}

.storeIntro {
  display: block;
}

.storeAdre {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-top: 10rpx;
}

.distance {
  margin-top: 5rpx;
}

.distance text:first-child {
  display: inline-block;
  margin-right: 10rpx;
}

.l_icon {
  height: 40rpx;
  width: 40rpx;
}

.iconColor9 {
  color: #999;
}

.contact {
  height: 64rpx;
  width: 63rpx;
}

.contactCon {
  width: 150rpx;
  text-align: center;
  box-sizing: border-box;
  line-height: 120rpx;
}

.reco_pro {
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
  padding-left: 14rpx;
  border-bottom: 1px solid #aaa;
}

.tips{
  display: block;
  margin-left: 14rpx;
  padding:10rpx 0 10rpx 0;
}

.p-line {
  display: flex;
  justify-content: center;
  height: 75rpx;
  align-items: center; 
}

.erweima {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.erweima view {
  padding: 25rpx;
  background: #fff;
}

.erweima image {
  width: 200px;
  height: 200px;
}