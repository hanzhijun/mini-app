@import '../../../../components/goods-msg/goods-msg.wxss';

.header {
  width: 100%;
  /* height: 260rpx; */
  display: flex;
  flex-wrap: wrap;
}

.header-top {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 5px solid #f2f2f2;
}

.header-top image {
  width: 60rpx;
  height: 90rpx;
  margin-left: 65rpx;
}

.header-bottom {
  display: flex;
  padding: 0 60rpx;
  align-items: center;
  height: 140rpx;
}

.header-bottom view {
  display: flex;
  flex-wrap: wrap;
  padding-left: 20rpx;
}

.header-bottom image {
  height: 35rpx;
  width: 50rpx;
}

.good-footer{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.good-footer .btn-box {
  padding-top: 30rpx;
}

.good-header {
  display: flex;
  width: 100%;
  padding: 0 30rpx 25rpx 35rpx;
  margin-bottom: 25rpx;
  border-bottom: 1px solid #d6d6d6;
}

.order-msg-box {
  display: flex;
  flex-wrap: wrap;
  padding: 35rpx;
  margin-top: 15rpx;
}

.order-msg-box text {
  width: 100%;
  font-size: 22rpx;
}

.footer {
  margin-top: 15rpx;
  padding-top: 35rpx;
}

.footer>text {
  padding-left: 35rpx;
}

.goods-box {
  display: flex;
}

.goods-box .box {
  margin: 25rpx 0;
}

.box image {
  width: 290rpx;
}

.box text {
  width: 100%;
  display: flex;
}

.content>view{
  border-bottom: 0;
}

.content .first {
  width: 100%;
  /* border-bottom: 1px solid #d6d6d6; */
}

.content-box .header {
  padding-top: 30rpx;
}

.content-box .content {
  padding: 20rpx 0 0 0 ;
}

.header-content {
  width: 100%;
  padding: 0 35rpx;
  display: flex;
  box-sizing: border-box;
}
.header-content > view {
  width: 100%;
  padding: 35rpx 0;
  border-bottom: 1px solid #d6d6d6;
}

.wuliu view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx 0;
}

.wuliu button {
  width: 100rpx;
  padding: 0;
  background: transparent;
  margin: 0;
  height: 50rpx;
  line-height: 50rpx;
}

.btn-box {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  /* padding:15rpx 0 25rpx 0; */
  border-bottom: 1px solid #d6d6d6
}

.btn-box button {
  background: #249cd3;
  border: 0;
}

.header .aftersale {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  padding: 30rpx 50rpx;
}

.aftersale view{
  margin-top: 10rpx;
}

.aftersale text ,.aftersale view{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.order_box {
  padding: 0 50rpx;
}

.order_box input {
  border: 1px solid #727071;
  padding:0 20rpx;
}

.order_box view {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.order_box view:last-child {
  margin-top: 25rpx;
}

.order_box {
  padding-bottom: 30rpx;
}

.iconColor9{
  color: #999;
  font-size: 46rpx;
}

.result {
  flex-wrap: wrap;
}

.row-p{
  display: flex;
  justify-content: flex-end;
  width: 100%;
}

.order-count {
  width: 100%;
  overflow: hidden;
}

.order-count .cou-item {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.order-count .cou-item .l {
  display: inline-block;
  float: left;
}

.order-count .cou-item .r {
  display: inline-block;
  float: right;
}

.pay-count {
  display: block!important;
  width: calc(100vw - 40rpx);
  height: 58rpx;
  line-height: 58rpx;
  background-color: #fff;
  border-top: 5rpx solid #f5f5f5;
  padding: 0 20rpx;
}
.pay-count .l {
  display: inline-block;
  float: left;
}
.pay-count .r {
  display: inline-block;
  float: right;
  color: #f01212;
}
