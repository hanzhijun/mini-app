.postal_con {
  margin: 30rpx 40rpx 0 40rpx;
}

.hasTotal {
  display: flex;
}

.hasTotal text {
  display: inline-flex;
  width: 50%;
}

.postal_con text:nth-child(2) {
  justify-content: flex-end;
}

.postalInp {
  height: 75rpx;
  width: 80%;
  padding-left: 20rpx;
  margin: 34rpx auto;
}

.tips {
  display: block;
  width: 80%;
  color: #999;
  text-align: left;
  margin: 20rpx auto;
}

.postal {
  width: 65%;
  margin-top: 80rpx;
  border: 1px solid #535353;
}

button::after {
  border: none;
}
