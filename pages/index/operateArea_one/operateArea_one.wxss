/*banner  */
button::after {
  border: none;
}
.banner {
  height: 300rpx;
  width: 100%;
  margin-bottom: 20rpx;
}

.banner image {
  height: 100%;
  width: 100%;
}

/*滑动区域  */

.wrapper {
  display: flex;
  white-space: nowrap;
}

.operation {
  display: inline-flex;
  flex-direction: column;
  /* height: 440rpx; */
  width: 356rpx;
  background: white;
  box-shadow: 0 5px 5px #e8e5e5;
  margin-left: 20rpx;
}

.operation:last-child {
  margin-right: 20rpx;
}

.imgCon {
  width: 356rpx;
  height: 356rpx;
}

.operation image {
  width: 100%;
  height: 100%;
}

.operationIntro {
  /* height: 120rpx; */
  width: 100%;
}

.operationIntro text {
  margin: 15rpx 0 0 10rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.todayRecommend {
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  margin: 13rpx 0 13rpx 0;
  padding: 15rpx;
}

.todayRecommend text:first-child {
  display: inline-block;
  margin: 0 20rpx 0 18rpx;
  border-right: 1px solid #ccc;
  padding-right: 20rpx;
}

/*列表  */

.c_listCon {
  position: relative;
  margin-top: 10rpx;
}

.hotList {
  display: flex;
  /* height: 175rpx; */
  /* width: 100%; */
  background: white;
  padding: 19rpx 13rpx;
  margin-bottom: 15rpx;
}

.c_listCon .hotList .pro_img {
  width: 210rpx;
  height: 210rpx;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  /*margin-left: 10rpx;*/
  width: 70%;
  position: relative;
}

.c_listCon .pro_info .proText, .c_listCon .pro_info view {
  /* display: block; */
  margin: 10rpx;
}

.c_listCon .pro_info .money-bar {
    position: absolute;
    left: 0;
    bottom: 0;
    margin-bottom: 0;
}

.c_listCon .pro_info .proTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.c_listCon .pro_info .proText:first-child {
  margin-top: 0;
}

.c_listCon .pro_info view text {
  padding-right: 20rpx;
  color: #f01212;
}

.c_listCon .pro_info view text.txt {
  padding-right: 5px;
  color: #333;
}

.go_buy {
  padding: 0 !important;
  height: 40rpx;
  width: 100rpx;
  color: #f85c45;
  line-height: 40rpx;
  background-color: #fff;
  border: 1px solid #f85c45;
  box-sizing: content-box !important;
  margin-top: -28px;
  margin-right: 30rpx;
}

.tongbeiIcon {
  width: 41rpx;
  height: 31rpx;
  vertical-align: text-bottom;
}

.saleHot {
  display: inline-block;
  padding: 0 !important;
  height: 50rpx;
  width: 150rpx;
  color: #f85c45;
  line-height: 50rpx;
  background-color: #fff;
  border: 1px solid #f85c45;
  box-sizing: content-box !important;
  border-radius: 30rpx;
  text-align: center;
}

.storeName {
  display: inline-block;
  width: 60%;
}
