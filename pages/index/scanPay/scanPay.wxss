.scanPayBg {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

 .scanPayBg .image {
  height: 100%;
  width: 100%;
} 

.footer {
  position: fixed;
  bottom: 0;
  background: #37434f;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
}

.content {
  position: absolute;
  top: 50rpx;
  width: 100%;
  text-align: center;
}

.storeName {
  display: block;
  font-size: 34rpx;
  color: white;
}

.inpCon {
  position: relative;
  margin: 90rpx 90rpx 15rpx;
  width: 570rpx;
  height: 112rpx;
  border-radius: 65rpx;
  background-color: #fff;
}

.insertPrice {
  display: inline-block;
  //width: 570rpx;
  //height: 112rpx;
  //border-radius: 65rpx;
  width:300rpx;
  height: 40rpx;
  float: left;
  margin: 36rpx 0 0 0;
  text-align: left;
}

.priceIcon {
  display: inline-block;
  font-size: 50rpx;
  height: 112rpx;
  line-height: 112rpx;
  float: left;
  margin: 0 20rpx 0 70rpx;
}

.discount {
  display: inline-flex;
  justify-content: space-between;
  width: 570rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 45rpx;
  margin-bottom: 39rpx;
  margin-top: 70rpx;
  position: relative;
}

.discount>view {
  font-size: 28rpx;
  padding-left: 25rpx;
}
.discount .body-view {
  position: absolute;
  right: 5rpx;
  top: 0;
}

.discount>view>text {
  padding-left: 10rpx;
}

.switchIcon {
  transform:scale(0.8) !important;
  margin-right: 10rpx;
}

.hasDiscount{
  font-size: 46rpx;
  color: #fff;
  margin-top: 20rpx;
  width:80vw;
  padding-left: 20vw;
  text-align: left;
}
.lit-price {
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  padding-top: 5rpx;
}
.bi-price {
  text-align: left;
  font-size: 36rpx;
  color: #fff;
  padding-top: 75rpx;
  padding-left: 20vw;
}
.golden {
  width:60rpx;
  height: 45rpx;
  margin-left: 10rpx;
  vertical-align:middle;
}