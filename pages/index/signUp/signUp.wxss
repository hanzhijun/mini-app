.header {
  position: relative;
  height: 230rpx;
  width: 100%;
}

.header .banner {
  height: 100%;
  width: 100%;
}

.sign {
  position: absolute;
  bottom: 30rpx;
  left: 20%;
  display: flex;
}

.circleOuter {
  display: flex;
  height: 155rpx;
  width: 155rpx;
  border-radius: 100%;
  background: rgba(250, 250, 250, 0.3);
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.circleIn {
  display: flex;
  height: 140rpx;
  width: 140rpx;
  border-radius: 100%;
  background: #fff;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.circleIn text {
  display: inline-block;
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
  border: 1px solid #ff6ea5;
  text-align: center;
  line-height: 120rpx;
  color: #ff6ea5;
}

.signDay {
  color: white;
  margin: 35rpx 0 0 40rpx;
}

.signDay text {
  display: inline-block;
  margin-bottom: 20rpx;
}

.tongbeiIcon {
  width: 41rpx;
  height: 31rpx;
  padding-left: 15rpx;
  vertical-align: text-bottom;
}

.signListCon {
  margin-top: 15rpx;
  padding-left: 35rpx;
  box-sizing: border-box;
}

.title {
  text-align: center;
  padding: 30rpx 0 30rpx 0;
}

.list {
  display: flex;
  /* justify-content: space-around; */
   padding: 25rpx 0 25rpx 0; 
  /* text-align: center; */
}

.list .conDivider{
  display: inline-block;
  width:25%;
  text-align: center;
}
.lits> text:first{
  display: inline-block;
  width: 200rpx;
}

.listIcon {
  display: inline-block;
  width: 41rpx;
  height: 31rpx;
}

.btn {
  padding: 0 !important;
  height: 50rpx;
  width: 120rpx;
  line-height: 45rpx;
  margin-right: 0 !important;
  margin-left: 0 !important;
  margin-top: -10rpx;
}

.btnNative {
  background-color: #f85c45;
  color: #fff;
  border: 1px solid transparent;
}

.btnNow {
  background-color: #fff;
  color: #333;
  border: 1px solid #333;
}

.copper image{
  vertical-align: text-bottom;
  margin-left: 10rpx;
}

.mar{
  margin-left: 15rpx;
}