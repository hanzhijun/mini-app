.bg-white {
  background: white !important;
}

.ip_tab_comtainer {
  width: 100%;
  background-color: #38454e;
  height: 80rpx;
  line-height: 80rpx;
  white-space: nowrap;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
}
.ip_tab_comtainer.bg-white {
  position: fixed;
  left: 0;
  top: 80rpx;
  z-index: 3;
  border-bottom: 1px solid #ddd;
}
.ip_tab_item_s {
  display: inline-block;
  padding: 0 26rpx;
  color: #f85c45;
  margin-right: 8rpx;
  margin-left: 8rpx;
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ip_tab_item_n {
  display: inline-block;
  padding: 0 26rpx;
  color: #fff;
  margin-right: 8rpx;
  margin-left: 8rpx;
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ip_tab_item {
  display: inline-block;
  padding: 0 26rpx;
  color: #000;
  margin-right: 8rpx;
  margin-left: 8rpx;
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.content {
  width: 100%;
  padding-top: 153rpx;
}

.c_listCon {
  margin-top: 10rpx;
}

.hotList {
  display: flex;
  height: 175rpx;
  background: white;
  padding: 19rpx 13rpx;
  margin-bottom: 15rpx;
}

.c_listCon .hotList .pro_img {
  width: 180rpx;
  height: 180rpx;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  margin-left: 10rpx;
  width: 70%;
}

.choiceStore {
  margin-left: 25rpx;
  width: 66%;
  position: relative;
}

.choiceStore .storeName {
  display: flex;
  margin-bottom: 20rpx;
}

.choiceStore .storeName text:first-child {
  width: 80%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 20rpx;
}

.choiceStore .storeName text:last-child {
  text-align: right;
}

.choiceStore .btn {
  display: inline-block;
  height: 40rpx;
  width: 100rpx;
  padding: 0 !important;
  color: #f85c45;
  line-height: 40rpx;
  background-color: #fff;
  border: 1px solid #f85c45;
  box-sizing: content-box !important;
  margin-bottom: 10rpx;
}

.choiceStore .btn:last-child {
  margin-left: 10rpx;
}

.fc-gray9 {
  color: #999;
}

.storeAdress {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  position: absolute;
  width: calc(100vw - 250rpx);
  left: 0;
  top: 120rpx;
}

.storeAdress text:first-child {
  padding-right: 5rpx;
}

button::after {
  border: none;
}
