page {
  background: #f5f5f5;
}

swiper {
  height: 300rpx !important;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/* 分类icon区域 */

.headerCon {
  position: relative;
  background: #fff;
  padding-bottom: 24rpx;
  margin-bottom: 12rpx;
}

.header .circle {
  display: inline-block;
  width: 20%;
  text-align: center;
}

.header .circle image {
  height: 89rpx;
  width: 89rpx;
  padding-top: 22rpx;
}

.header .circle text {
  display: block;
  margin-top: 5rpx;
  text-align: center;
}

/* 活动入口 */

.signUp {
  height: 32vw;
  width: 100%;
  background: #fff;
  box-shadow: 0 5px 5px #eee;
  text-align: center;
  padding: 10rpx 0;
}

.signUp image {
  width: 750rpx;
  height: 240rpx;
}

/* 大牌购 */

.areaOne {
  margin-top: 5rpx;
  overflow: hidden;
}

.areaOne view {
  display: inline-block;
  border-right: 1px solid #e5e5e5;
  width: calc((100vw - 3px)/3);
  text-align: center;
  padding-top: 10rpx;
  float: left;
}

.areaOne view:nth-child(3n+0) {
  border: none;
}

.areaOne view text {
  text-align: left;
  display: block;
  padding: 12rpx 0 0 14rpx;
  box-sizing: border-box;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.areaOne view text:first-child {
  padding-top: 20rpx;
}

.areaOne view image {
  height: 204rpx;
  width: 204rpx;
  margin-top: 40rpx;
}

.fc-gray999 {
  color: #999;
}

/* 全品兑 */

.label {
  position: relative;
}

.label {
  margin-top: 8rpx;
  width: 100vw;
  height: 76rpx;
  overflow: hidden;
  background-color: #fff;
}

.label image {
  width: 100vw;
  height: 76rpx;
}

.areaTwo {
  margin-top: 5rpx;
}

.areaTwo view {
  display: inline-block;
  border-right: 1px solid #e5e5e5;
  width: 24.7%;
  text-align: center;
  padding-top: 10rpx;
}

.areaTwo view image {
  height: 166rpx;
  width: 166rpx;
  margin-top: 14rpx;
}

.areaTwo view text {
  text-align: left;
  display: block;
  padding: 12rpx 0 0 14rpx;
  box-sizing: border-box;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.areaTwo view text:first-child {
  padding-top: 40rpx;
}

.areaTwo view:nth-child(4n+0) {
  border: none;
}

/* 惠生活 */

.areaThree {
  margin-top: 5rpx;
}

.areaThree view {
  border-right: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  width: 49.8%;
  text-align: center;
  display: inline-block;
}

.areaThree view image {
  height: 297rpx;
  width: 297rpx;
  margin-top: 14rpx;
}

.areaThree view text {
  text-align: left;
  display: block;
  padding: 12rpx 0 0 41rpx;
  box-sizing: border-box;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.areaThree view text:first-child {
  padding-top: 50rpx;
}

.areaThree view:nth-child(even) {
  border-right: none;
}

