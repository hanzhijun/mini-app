  border-bottom: none;
} */

/* 推荐 */

.recTitle {
  text-align: center;
  margin: 8rpx 0 0;
}

.recommendImg {
  width: 750rpx;
  height: 76rpx;
}

.goods {
  background: #fff;
  display: inline-block;
  width: calc((100vw - 45rpx) / 2);
  height: 500rpx;
  margin: 0 0 15rpx 15rpx;
  padding-bottom: 10rpx;
  overflow: hidden;
  float: left;
  position: relative;
}

.goods .pos image {
  width: 300rpx;
  height: 300rpx;
}

.pos {
  width: 100%;
  padding-top: 18rpx;
  text-align: center;
  float: left;
}

.good_title {
  display: block;
  color: #4c4c4c;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  box-sizing: border-box;
  float: left;
  width: calc((100vw - 45rpx) / 2 - 20rpx);
  position: absolute;
  left: 15rpx;
  top: 336rpx;
}

.pre_Price, .use_price {
  display: block;
  margin-top: 8rpx;
  float: left;
  width: calc((100vw - 45rpx) / 2 - 20rpx);
  position: absolute;
  left: 15rpx;
  top: 412rpx;
}

.use_price {
  top: 450rpx;
}

.pre_Price .price, .use_price .price {
  color: #f50c0c;
}

.golden {
  width: 43rpx;
  height: 32rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.suspension {
  position: fixed;
  bottom: 90rpx;
  right: 0;
  width: 130rpx;
  height: 260rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 15rpx;
  text-align: center;
  transition: all 0.5s;
  z-index: 9999;
}

.suspension view:first-child {
  margin: 30rpx 0 27rpx 0;
}

.susIcon {
  width: 52rpx;
  height: 41rpx;
}

.suspension text {
  display: block;
  font-size: 32rpx;
}

.gamePop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 99999;
  width: 100vw;
  height: 100vh;
}

.gamePop image {
  width: 100vw;
  height: 104vh;
}

.closeGamePop {
  color: #fff;
  font-size: 37px;
  width: 30px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  position: absolute;
  right: 10%;
  top: 20%;
  z-index: 3;
}
