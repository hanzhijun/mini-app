.c_listCon {
  position: relative;
  margin-top: 10rpx;
}

.hotList {
  display: flex;
  /* height: 175rpx; */
  width: 100%;
  background: white;
  padding: 19rpx 13rpx;
  margin-bottom: 15rpx;
}

.c_listCon .hotList .pro_img {
  width: 210rpx;
  height: 210rpx;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  margin-left: 20rpx;
  width: 70%;
}

.c_listCon .pro_info .proText, .c_listCon .pro_info .proTitle {
  display: inline-block;
  margin: 20rpx 20rpx 20rpx 0;
}

.c_listCon .pro_info .proTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.c_listCon .pro_info .proText:first-child {
  margin-top: 0;
}

.colorC {
  color: #ccc;
}

.sliverInfo text {
  display: inline-block;
  width: 45%;
}

.sliverInfo text:last-child {
  text-align: right;
}

.intro {
  display: flex;
  height: 75rpx;
  width: 100%;
  line-height: 70rpx;
  padding: 0 12rpx 0 12rpx;
  box-sizing: border-box;
  border-top: 1px solid #aaa;
}

.intro view {
  width: 50%;
}

.closeTime {
  text-align: right;
  margin-right: 10rpx;
}

.colorR {
  color: #f85c45;
}


.order{
  position: fixed;
  bottom:0;
  width:100%;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  color:white;
  background: #f85c45;
}