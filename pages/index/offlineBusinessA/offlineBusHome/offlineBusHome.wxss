/*banner  */
button::after {
  border: none;
}

swiper{
  width:100%;
  /* height: 400rpx; */
}

swiper image{
  width:100%;
  height:100%;
}

.bus_info {
  padding:10rpx 0 15rpx 0;
}

.locationCon {
  display: flex;
  margin: 15rpx 12rpx 0 12rpx;
}

.storeIntro {
  width: 96%;
  display: block;
  margin:15rpx auto;
  white-space:normal; 
  word-break:break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* margin: 16rpx 14rpx 0 14rpx; */
}

.location {
  width: 60%;
}

.location text {
  display: block;
  margin: 10rpx 0 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.location text:last-child, .goAdre text {
  color: #999;
}

.l_icon {
  height: 40rpx;
  width: 40rpx;
}

.goAdress {
  height: 36rpx;
  width: 36rpx;
}

.goAdre {
  width: 160rpx;
  text-align: center;
  border-right: 1px solid #dedede;
}

.goAdre text {
  display: block;
}

.contact {
  height: 64rpx;
  width: 63rpx;
}

.contactCon {
  width: 150rpx;
  text-align: center;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.iconColor9 {
  color: #999;
}

/*商品推荐  */

.c_listCon {
  position: relative;
  margin-top: 5rpx;
}

.hotList {
  display: flex;
  height: 175rpx;
  background: white;
  padding: 19rpx 13rpx;
  margin-bottom: 15rpx;
}

.c_listCon .hotList .pro_img {
  width: 210rpx;
  height: 100%;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  margin-left: 20rpx;
  width: 70%;
}

.c_listCon .pro_info .proText, .c_listCon .pro_info .proTitle {
  display: inline-block;
  margin: 20rpx 20rpx 20rpx 0;
}

.c_listCon .pro_info .proTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.c_listCon .pro_info .proText:first-child {
  margin-top: 0;
}

.colorC {
  color: #ccc;
}

.go_buy {
  padding: 0 !important;
  height: 40rpx;
  width: 100rpx;
  color: #f85c45;
  line-height: 40rpx;
  background-color: #fff;
  border: 1px solid #f85c45;
  box-sizing: content-box !important;
  margin-top: -28px;
  margin-right: 30rpx;
}

.tabbar {
  height: 55rpx;
  width: 100%;
  display: flex;
  margin-top: 10rpx;
  line-height: 55rpx;
  padding: 10rpx 0 10rpx 0;
}

.tabbar text {
  display: inline-block;
  width: 50%;
  text-align: center;
  color: #999;
}

.tabbar text:first-child {
  border-right: 1px solid #ccc;
}

.tabSctive {
  color: #333!important;
}

.tabColor {
  color: #999;
}

.detailCon {
  box-sizing: border-box;
  margin-top: 5rpx;
}

.detailCon image {
  width: 100%;
}

.noData{
  margin-top: 20rpx;
  text-align: center;
  background: #f2f2f2;
  color:#999;
}