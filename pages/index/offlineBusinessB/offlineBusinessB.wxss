/*banner  */

button::after {
  border: none;
}

swiper {
  width: 100%;
}

swiper image {
  width: 100%;
  height: 100%;
}

.bus_info {
  width: 100%;
  overflow: hidden;
}

.locationCon {
  padding: 15rpx 12rpx 10rpx 12rpx;
  overflow: hidden;
}

.storeIntro {
  padding: 0 14rpx 0 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  padding-top: 10rpx;
}

.location {
  width: 48vw;
  height: 90rpx;
  overflow: hidden;
  float: left;
}

.location text {
  display: block;
  padding: 10rpx 0 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.location text:last-child, .goAdre text {
  color: #999;
}

.l_icon {
  height: 40rpx;
  width: 40rpx;
}

.goAdress {
  height: 36rpx;
  width: 36rpx;
}

.goAdre {
  width: 160rpx;
  text-align: center;
  border-right: 1px solid #dedede;
  float: right;
}

.goAdre text {
  display: block;
}

.contact {
  height: 64rpx;
  width: 63rpx;
}

.contactCon {
  width: 150rpx;
  text-align: center;
  padding-top: 10rpx;
  box-sizing: border-box;
  float: right;
}

.bussinessIntro {
  margin-top: 10rpx;
}

.intro {
  display: flex;
  height: 66rpx;
  width: 100%;
  line-height: 66rpx;
  padding: 0 12rpx 0 12rpx;
  box-sizing: border-box;
}

.intro view {
  width: 50%;
}

.intro image {
  width: 34rpx;
  height: 33rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}

.closeTime {
  text-align: right;
}

.bus_photo image {
  width: 100%;
}

.order {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: white;
  background: #f85c45;
}

.iconColor9 {
  color: #999;
}

.collectIcon {
  position: absolute;
  right: 10rpx;
  height: 50rpx;
  width: 50rpx;
  background: rgba(0, 0, 0, 0.3);
  text-align: center;
  border-radius: 100%;
  line-height: 50rpx;
  bottom: 22rpx;
}

.fc-white {
  color: white;
}

.icon-dizhi1 {
  float: left;
}