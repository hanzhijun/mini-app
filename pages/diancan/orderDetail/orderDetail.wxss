.header {
  height: 200rpx;
}

.header text {
  display: block;
  text-align: center;
  margin-bottom: 30rpx;
}

.header text:first-child {
  margin-top: 40rpx;
}

.divider {
  background: #f7f7f7;
  height: 17rpx;
}

.listContainer {
  margin: 26rpx 12rpx 150rpx 19rpx;
}

.orderList {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.proImg {
  height: 175rpx;
  width: 175rpx;
}

.proInfo {
  width: 60%;
  margin-left: 30rpx;
}

.proInfo text {
  display: block;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.note {
  border: 1px solid #38454e;
  width: 100%;
  margin: 19rpx 0 30rpx 0;
  padding: 20rpx;
}

.busniessName {
  display: block;
  margin-bottom: 30rpx;
}

.totalPay {
  float: right;
}

.footer {
  margin-left: 14rpx;
}

.footer view text:first-child {
  padding-right: 17rpx;
}

.footer view {
  margin-top: 20rpx;
}
