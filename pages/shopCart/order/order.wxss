@import '../../../components/goods-msg/goods-msg.wxss';

.fixImage {
  width: 155rpx;
  height: 155rpx;
}

.fixImage image{
  height: 100%;
  width: 100%;
}

.header {
  padding: 15rpx 25rpx 20rpx;
  line-height: 36rpx;
  overflow: hidden;
}

.header button {
  width: 335rpx;
  height: 75rpx;
  border: 1px solid #333;
  background-color: transparent;
}

.header image {
  width: 18rpx;
  height: 28rpx;
}

.left {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.left view {
  width: 100%;
  display: flex;
  align-items: center;
}

.left image {
  width: 26px;
  height: 16px;
  margin-right: 15rpx;
  display: block;
}

.view-box-1, .view-box-2, .view-box-3 {
  height: 140rpx;
  display: flex;
  margin-top: 15rpx;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  align-items: center;
}

.view-box-1 view {
  display: flex;
  flex-wrap: wrap;
}

.view-box-1 text {
  width: 100%;
}

.view-box-3 {
  flex-wrap: wrap;
  height: auto;
  padding: 45rpx 15rpx;
}

.view-box-3 view {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 15rpx;
}

.total {
  justify-content: flex-end !important;
  margin-bottom: 64rpx;
}

.pay {
  width: 460rpx;
  height: 70rpx;
  font-size: 36rpx;
  line-height: 70rpx;
}

.msg {
  box-sizing: border-box;
  padding: 30rpx 35rpx;
  width: 100%;
  border-bottom: 1px solid #d6d6d6;
  display: flex;
  align-items: center;
}

.msg input {
  border: 1px solid #e6e6e6;
  flex: 1;
  padding-left: 20rpx;
}

.alert-box {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}

.alert-box>view {
  box-sizing: border-box;
  padding: 20rpx;
  width: 503rpx;
  height: 316rpx;
  background: #f9f5f5;
  display: flex;
  flex-wrap: wrap;
}

.alert-box .first-box text {
  width: 100%;
}

.alert-box .first-box text:nth-child(2) {
  text-align: center;
}

.alert-box .first-box button, .code-box .code-box-2 button {
  width: 200rpx;
  height: 70rpx;
}

.code-box {
  width: 520rpx;
}

.code-box-1, .code-box-2 {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.code-box-1 input {
  padding-left: 20rpx;
}

.content-box .content {
  border: 0;
}

.content-box .footer {
  padding-top: 0;
}

.iconColor9 {
  color: #999;
  padding-right: 10rpx;
}

.view-box-3 .red {
  color: #f90404;
}

.pop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 99;
}

.setAdress {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -159rpx;
  margin-left: -252rpx;
  width: 504rpx;
  height: 318rpx;
  background: white;
}

.goSet {
  width: 207rpx;
  height: 70rpx;
  background: #f75d45;
  padding: 0 !important;
  line-height: 70rpx;
  color: white;
}

.txtCenter {
  text-align: center;
  margin: 70rpx 0 70rpx 0;
}

.closeAdress {
  height: 34rpx;
  width: 34rpx;
}

.mar {
  margin: 20rpx 0 20rpx 20rpx;
}

.addr-btn {
  overflow: hidden;
  padding-top: 30rpx;
}

.addr-mess {
  overflow: hidden;
}

.addr-mess .addr-name {
  padding: 10rpx 0 10rpx 39rpx;
}

.addr-icon1 {
  float: left;
  margin: 5rpx 5rpx 0 0;
}

.addr-txt {
  width: 82vw;
  float: left;
  padding-right: 15rpx;
}

.addr-icon2 {
  float: left;
  margin-top: 5rpx;
}

.golden {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.golden-out {
  overflow: hidden;
}

.golder-l-txt {
  display: inline-block;
  float: left;
  margin-right: 5rpx;
}

.pub-name {
  width: 100vw;
  border-bottom: 1px solid #e6e6e6;
  padding: 15rpx 30rpx 20rpx 0;
}

.goldhell-name {
  padding-bottom: 10rpx;
}
