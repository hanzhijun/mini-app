.box {
  display: flex;
  min-height: 100vh;
}

.left {
  width: 108px;
  background-color: #e6e6e6;
  height: 100vh;
}

.left text {
  display:block;
  width: calc(100% - 3px);
  height: 48px;
  line-height: 48px;
  text-align: center;
  border-left:3px solid #e6e6e6;
  border-bottom: 0.5px solid #ccc;
  color: #333;
  font-size:13px;
}

.left text:last-child {
  border-bottom: 0!important;
}

.left text.active {
  background-color: #fff;
  color: #f75d45;
  border-bottom: 0;
  border-left: 3px solid #f85c45;
  height: 48px;
  line-height: 48px;
}

.right {
  display: flex;
  flex: 1;
  padding: 0 15rpx;
  flex-wrap: wrap;
  align-items: flex-start;
  /* justify-content: space-between; */
  align-content: flex-start;
}


.classify-box {
  display: flex;
  flex-wrap: wrap;
  width: 175rpx;
  height: 210rpx;
  margin: 15rpx 5rpx;
}

.classify-box image {
  width: 175rpx;
  height: 175rpx;
}

 .classify-box text {
  width: 100%;
  text-align: center;
} 

.hidden {
  display: none;
}