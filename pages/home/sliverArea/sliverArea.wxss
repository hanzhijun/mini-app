/*导航条  */

swiper {
  position: relative;
  height: 300rpx !important;
}
swiper-item image {
  width: 100%;
  height: 100%;
}

.navbar {
  flex: none;
  display: flex;
  background: #37454e;
  height: 90rpx;
}

.navbar text:first-child {
  padding-left: 34rpx;
}

.more {
  line-height: 90rpx;
  color: white;
  padding: 0 34rpx 0 20rpx;
  box-sizing: border-box;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
  font-size: 24rpx;
  color: white;
}

.navbar .item.active {
  color: #f85c45;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #f85c45;
}

/*轮播  */

swiper::before {
  position: relative;
}

swiper-item image {
  width: 100%;
}

/*活动 1 */

.activity_one {
  display: flex;
  width: 96%;
  margin: 15rpx auto;
}

.activity_one .a_left image {
  width: 355rpx;
  height: 401rpx;
  padding-right: 15rpx;
}

.activity_one .a_right image {
  width: 356rpx;
  height: 192rpx;
}

.activity_one .a_right image:nth-child(2) {
  padding-top: 12rpx;
}

/*活动2  */

.activity_two, .activity_three {
  display: flex;
  width: 96%;
  margin: 15rpx auto;
}

.activity_two view:nth-child(1) {
  margin-right: 15rpx;
}

.activity_two view {
  width: 50%;
  height: 200rpx;
  background: white;
}

.activity_two view image {
  height: 100%;
  width: 100%;
}

/*活动3  */

.activity_three view {
  /* width: 33.3%; */
  width:235rpx;
  height: 200rpx;
  background: white;
  margin-right: 10rpx;
}

.activity_three view image {
  height: 100%;
  width: 100%;
}

.activity_three view:last-child {
  margin-right: 0;
}

.hide {
  display: none;
}

/*推荐  */

.divider {
  display: flex;
  justify-content: center;
  align-items: center;
}

.divider .c_word {
  color: #2b2727;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx 0 20rpx;
}

.line {
  width: 37%;
  height: 1rpx;
  background: #333;
}

.goodChoose {
  width: 95%;
  margin: auto;
}

.goods {
  display: inline-block;
  width: 50%;
  margin-bottom: 30rpx;
}

.goods .pos image {
  width: 339rpx;
  /* height: 258rpx; */
  height:339rpx;
}

.pos {
  text-align: center;
}

.good_title {
  display: inline-block;
  width: 98%;
  color: #4c4c4c;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.good_price {
  padding-left: 10rpx;
  box-sizing: border-box;
  padding-right: 20rpx;
  color: #f01212;
}

.golden {
  width: 43rpx;
  height: 32rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.padd{
  padding-left: 13rpx;
}

text.red,
.fc-gray-darkest.price {
  color: #f01212;
}