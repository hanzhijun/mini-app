/*轮播  */

swiper {
  position: relative;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.bus_info {
  height: 150rpx;
  width: 100%;
}

.locationCon {
  display: flex;
  margin: 15rpx 12rpx 0 12rpx;
}

.storeIntro {
  margin: 16rpx 14rpx 0 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.location {
  width: 60%;
}

.location text {
  display: block;
  margin: 10rpx 0 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.location text:last-child, .goAdre text {
  color: #999;
}

.l_icon {
  height: 40rpx;
  width: 40rpx;
}

.goAdress {
  height: 36rpx;
  width: 36rpx;
}

.goAdre {
  width: 160rpx;
  text-align: center;
  border-right: 1px solid #dedede;
}

.goAdre text {
  display: block;
}

.contact {
  height: 64rpx;
  width: 63rpx;
}

.contactCon {
  width: 150rpx;
  text-align: center;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.bussinessIntro {
  margin-top: 10rpx;
}

.intro {
  display: flex;
  height: 66rpx;
  width: 100%;
  line-height: 66rpx;
  padding: 0 12rpx 0 12rpx;
  box-sizing: border-box;
}

.intro view {
  width: 50%;
}

.intro image {
  width: 34rpx;
  height: 33rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}

.closeTime {
  text-align: right;
}

.bus_photo image{
  width:100%;
  height:600rpx;
}

.order{
  position: fixed;
  bottom:0;
  width:100%;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  color:white;
  background: rgba(0,0,0,0.3);
}

.iconColor9{
  color:#999;
}