page {
  background: #fff;
}

swiper {
  height: 300rpx !important;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.nav {
  display: flex;
  justify-content: space-around;
  height: 70rpx;
  line-height: 70rpx;
  color: #666;
}

.active {
  border-bottom: 2px solid #f75d45;
  color: #333;
}

.goods {
  background: #fff;
  display: inline-block;
  width: calc((100vw - 45rpx) / 2);
  margin: 0 0 15rpx 15rpx;
  padding-bottom: 10rpx;
}

.goods .pos image {
  width: 354rpx;
  height: 354rpx;
}

.pos {
  padding-top: 18rpx;
  text-align: center;
}

.good_title {
  display: block;
  color: #4c4c4c;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  box-sizing: border-box;
}

.author{
  display: flex;
  justify-content: space-between;
}

.author view .photo{
  height:45rpx;
  width: 45rpx;
  border-radius: 100%;
  overflow: hidden;
  vertical-align: middle;
  margin-right: 7rpx;
}

.collect{
  color:#d81e06;
  font-size: 46rpx;
  vertical-align: middle;
}