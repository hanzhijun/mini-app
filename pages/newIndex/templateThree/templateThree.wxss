page {
  background: #e6e6e6;
}

swiper {
  height: 300rpx !important;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.recommend {
  display: flex;
  justify-content: space-around;
  text-align: center;
  padding: 12rpx 0 10rpx 0;
}

.recommend .goods image {
  height: 159rpx;
  width: 159rpx;
}

.recommend .goods text {
  display: block;
}

.recommend .goodsLead {
  height: 126rpx;
  width: 126rpx;
  border: 1px solid #f75d45;
  margin-top: 27rpx;
}

.recommend .goodsLead text {
  display: block;
  width: 80%;
  margin: auto;
}

.recommend .goodsLead text:first-child {
  border-bottom: 1px solid #333;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
}

.content {
  width: 100%;
}

.c_listCon {
  position: relative;
  margin-top: 10rpx;
}

.hotList {
  display: flex;
  background: white;
  padding: 19rpx 0 19rpx 14rpx;
  margin-bottom: 15rpx;
}

.c_listCon .hotList .pro_img {
  width: 190rpx;
  height: 190rpx;
}

.c_listCon .hotList .pro_img image {
  height: 100%;
  width: 100%;
}

.c_listCon .pro_info {
  margin-left: 10rpx;
  width: 70%;
}

.choiceStore {
  margin-left: 25rpx;
  width: 69%;
}

.choiceStore .storeName {
  display: flex;
  margin-bottom: 12rpx;
}

.choiceStore .storeName text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 20rpx;
}

.author{
  display: flex;
  justify-content: space-between;
  margin-top: 56rpx;
  /* position: absolute;
  bottom:11%; */
}

.author view .photo{
  height:45rpx;
  width: 45rpx;
  border-radius: 100%;
  overflow: hidden;
  vertical-align: middle;
  margin-right: 7rpx;
}

.author .label{
  min-width: 158rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #f7da80;
  border-radius: 15rpx;
  margin-top:8rpx;
}

.goods {
  display: none;
}
.goods.thisover {
  display: inline-block;
}