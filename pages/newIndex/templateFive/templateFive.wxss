
.ip_tab_comtainer {
  width: 100%;
  padding: 10rpx 0;
  white-space: nowrap;
}

.ip_tab_comtainer .tem-4-head {
  width: 450rpx;
  height: 500rpx;
  text-align: center;
  display: inline-block;
  padding: 10rpx 0;

}

.ip_tab_comtainer .tem-4-head .tem-4-bar {
  width: 400rpx;
  height: 500rpx;
  box-shadow: 2rpx 2rpx 5rpx 5rpx #ddd;
  margin: 0 auto;
  background: #fff;
}
.ip_tab_comtainer .tem-4-head image {
  width: 400rpx;
  height: 400rpx;
}

.textWord {
  width: 400rpx;
  padding: 5rpx 0;
  height: 95rpx;
  position: relative;
}

.textWord text {
  display: inline-block;
  width: 370rpx;
  padding: 5rpx 0;
  margin: 0 auto;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  box-sizing: border-box;
  text-align: left;
  white-space: normal;
}
.textWord text.fs-bold {
  position: absolute;
  z-index: 1;
  left: 10rpx;
}

.recommend {
  display: flex;
  justify-content: space-around;
  text-align: center;
  padding: 12rpx 0 10rpx 0;
}

.recommend .goods image {
  height: 159rpx;
  width: 159rpx;
}

.recommend .goods text {
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  box-sizing: border-box;
  width: 159rpx;
}

.recommend .goodsLead {
  height: 126rpx;
  width: 126rpx;
  border: 1px solid #f75d45;
  margin-top: 27rpx;
}

.recommend .goodsLead text {
  display: block;
  width: 80%;
  margin: auto;
}

.recommend .goodsLead text:first-child {
  border-bottom: 1px solid #333;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
}

.product {
  display: flex;
  padding: 14rpx;
  margin-top: 11rpx;
}

.product view text {
  padding-left: 12rpx;
  box-sizing: border-box;
}

.product image {
  width: 365rpx;
  height: 365rpx;
}

.product text {
  /* display: block; */
}

.title {
  font-weight: bold;
  margin-bottom: 45rpx;
  margin-top: -5rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  box-sizing: border-box;
  line-height: 60rpx;
  height: 120rpx;
}

.intro {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  box-sizing: border-box;
  line-height: 36rpx;
}
