@import '../../app.wxss';

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  /* height: 100rpx; */
  height: 47px;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1px solid #d5d5d5;
  display: flex;
  justify-content: space-between;
}

.tab-bar view {
  width: 33%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.tab-bar text {
  width: 100%;
  text-align: center;
  font-size:10px;
  color: #333;
  padding-top: 2px;
}

.tab-bar image {
  /* width: 45rpx;
  height: 40rpx; */
  width: 28px;
  height: 26px;
}